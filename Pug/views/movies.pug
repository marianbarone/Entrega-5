doctype
html(lang='en')
  head
    meta(charset='utf-8')
    title PUG
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/css/bootstrap.min.css")
  body
  main.container
    h3(style={margin : '2rem 0'})  Lista de películas
    a(type="button" href="/home" class="btn btn-primary btn-lg") Agregar nueva película

    if movies.length 
      table(class="table table-light col-6  mx-auto mt-4")
        thead(class="thead-dark")
          tr
            th(scope="col") Nombre
            th(scope="col") Precio
            th(scope="col") Imagen
        tbody
          each movie in movies
            tr(scope="row")
              td #{movie.title}
              td #{movie.price}
              td 
                img(height="50px" width="80px")&attributes({src: movie.thumbnail})
    else
      div(class="row justify-content-center mt-5")
        div(class="col-md-5")
          div(class="card")
            div(class="card-body")
              h2(class="display-5 text-center") Lista vacia
              p(style="display: inline;") No hay películas registradas
  script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/js/bootstrap.bundle.min.js") 

