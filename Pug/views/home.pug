html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible" content="IE=edge")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet")
        title(Desafio 5)
    body


    form(class='form col-4 mx-auto mt-4' action="/movies" method="post")
        h2 Movies
        h3(class='title') Agregá una película
        div(class="form-floating mb-3")
            input(type="text" name="title" class="form-control" id="floatingInput" placeholder="Batman Begins")
            label(for="title") Título
        div(class="form-floating mb-3")
            input(type="number" name="price" class="form-control" id="floatingInput" placeholder="Precio")
            label(for="price") Precio
        div(class="form-floating mb-3")
            input(type="text" name='thumbnail' class="form-control" id="floatingInput" placeholder="Imágen")
            label(for="thumbnail") Imágen
        input(type="submit" value="Agregar" class="btn btn-primary mt-3 mr-1")

        a(href="/movies" class=" btn btn-outline-primary ml-1 mt-3 ml-1") Ver listado de películas
   
